<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".NewStudent"
        android:padding="16dp">


        <EditText
            android:id="@+id/activity_new_student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:importantForAutofill="no"
            android:inputType="textCapWords"
            android:hint="@string/name" />

        <EditText
            android:id="@+id/activity_new_student_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_new_student_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:hint="@string/phone" />

        <EditText
            android:id="@+id/activity_new_student_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_new_student_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:hint="@string/email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
